{{ define "nav" }}
<nav>
    <div>
        <a href="/">Home</a>
        {{if .IsAuth}}
            <a href="/snippet/create">Create snippet</a>
        {{end}}
        
    </div>
    <div>
        {{if .IsAuth}}
            <form action="/user/logout" method="POST">
                <!-- CSRF Token here  -->
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                <button>Logout</button>
            </form>
        {{else}}
            <a href="/user/signup">Signup</a>
            <a href="/user/login">Log in</a>
        {{end}}
    </div>    
</nav>
{{ end }}